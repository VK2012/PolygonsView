<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:orientation="vertical"
    >

    <com.vk.widget.PolygonsView
        android:id="@+id/polygonsView"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="0px"
        android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_kill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="击杀："/>
        <SeekBar
            android:id="@+id/kill"
            android:layout_toRightOf="@+id/tv_kill"
            android:max="100"
            android:progress="30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_survive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生存："/>
        <SeekBar
            android:layout_toRightOf="@+id/tv_survive"
            android:id="@+id/survive"
            android:max="100"
            android:progress="70"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_assist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="助攻："/>
        <SeekBar
            android:id="@+id/assist"
            android:layout_toRightOf="@+id/tv_assist"
            android:layout_width="match_parent"
            android:max="100"
            android:progress="26"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_physical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="物理："/>
        <SeekBar
            android:id="@+id/physical"
            android:layout_toRightOf="@+id/tv_physical"
            android:layout_width="match_parent"
            android:max="100"
            android:progress="43"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_magic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="魔法："/>
        <SeekBar
            android:id="@+id/magic"
            android:layout_toRightOf="@+id/tv_magic"
            android:layout_width="match_parent"
            android:max="100"
            android:progress="58"
            android:layout_height="wrap_content"/>
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_defense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="防御："/>
        <SeekBar
            android:id="@+id/defense"
            android:layout_toRightOf="@+id/tv_defense"
            android:layout_width="match_parent"
            android:max="100"
            android:progress="16"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金钱："/>
        <SeekBar
            android:id="@+id/money"
            android:layout_toRightOf="@+id/tv_money"
            android:max="100"
            android:progress="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>
